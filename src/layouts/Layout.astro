---
import "@/styles/global.css";
import { ClientRouter } from "astro:transitions";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <!-- <ClientRouter /> -->
    <title>{title}</title>

    <script>
      alert("Web not finished yet\nThere is a bug with view transitions so they are unavailable");
    </script>
  </head>
  <body class="flex justify-center">
    <slot />
  </body>
</html>

<style is:global>
  html,
  body {
    margin: 0;
    width: 100%;
    /* height: 100%; */
    background-color: #b9c7d4;
    color: #222222;
    box-sizing: border-box;
    scroll-behavior: none;
    overflow-x: hidden;
    font-family:
      "Telegraf",
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      "Open Sans",
      "Helvetica Neue",
      sans-serif;
  }
</style>
