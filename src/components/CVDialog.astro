---
import Ikurrina from "@/assets/flags/ikurrina.png";
import BanderaEspana from "@/assets/flags/Bandera_de_Espa√±a.svg.webp";
---

<dialog
  id="cv-dialog"
  onclick="toggleDialog('')"
  closedby="any"
  class="w-full h-full max-w-92 max-h-60 m-6 sm:m-0 bg-white rounded-2xl p-6 text-center fixed top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2"
>
  <div class="flex flex-col gap-4 items-center justify-between h-full">
    <h2 class="text-2xl font-semibold">CV</h2>
    <div class="flex gap-4 justify-center items-center">
      <a href="/cv/CV-EUSKERA.pdf" download class="w-full hover:opacity-90 transition-opacity ease-in-out duration-200">
        <img src={Ikurrina.src} alt="Ikurrina" class="h-16" />
      </a>
      <a
        href="/cv/CV-CASTELLANO.pdf"
        download
        class="w-full hover:opacity-90 transition-opacity ease-in-out duration-200"
      >
        <img src={BanderaEspana.src} alt="BanderaEspana" class="h-16" />
      </a>
    </div>
    <form method="dialog">
      <button
        class="px-4 py-2 bg-gray-200 rounded-xl cursor-pointer hover:bg-red-500 transition-colors ease-in-out duration-200"
        >Close</button
      >
    </form>
  </div>
</dialog>
